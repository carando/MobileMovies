<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.ubiq.android.app.mobilemovies.fragments.DetailActivityFragment">
    !--
    !--  Basic Movie Information: Title, Poster, Release Date, Popularity
    !--    Running Time, Description
    !--

    <TextView
        android:id="@+id/movie_title_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple500"
        android:elegantTextHeight="false"
        android:gravity="left|center_vertical"
        android:text="@string/movie_title"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:paddingLeft="15dip"
        android:typeface="sans"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="250dip"
            android:layout_height="275dip"
            android:scaleType="centerInside"
            android:layout_gravity="top"
            android:layout_marginTop="5dip"
            android:layout_marginRight="20dip"
            android:layout_marginLeft="5dip"
            android:layout_marginBottom="5dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            android:layout_gravity="top|right"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="5dip"
            android:weightSum="1">


            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_release_year"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:textSize="20dip"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/runningtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_running_time"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:textSize="15dip"
                android:textStyle="italic"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movie_rating"
                android:gravity="top|left"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:textStyle="bold"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/movie_mark_as_favorite"
                android:id="@+id/button_favorite"
                android:background="@color/purple400"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>
    <com.ubiq.android.app.mobilemovies.widget.ExpandableTextView
        android:id="@+id/movie_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/movie_description"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textStyle="normal"
        android:elegantTextHeight="false"/>


    !--
    !--  Trailers
    !--
    !-- horizontal line
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/black" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:showText="true"
        android:textOn="Reviews"
        android:textOff="Trailers"
        android:id="@+id/trailer_or_review_switch"
        android:layout_gravity="left|center_horizontal"
        android:textColor="@color/black"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="android.support.v4.app.ListFragment"
        android:id="@+id/container_trailer_or_reviews"
        tools:layout="@layout/movie_trailers_layout"/>


</LinearLayout>
